<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_kendaraan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gambar_kendaraan"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/gbr2"/>

                <TextView
                    android:id="@+id/nama_kendaraan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/gambar_kendaraan"
                    android:layout_marginTop="10dp"
                    android:text="Daihatsu Ayla"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/jenis_kendaraan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nama_kendaraan"
                    android:layout_toRightOf="@id/gambar_kendaraan"
                    android:layout_marginTop="5dp"
                    android:text="City Car"
                    android:textStyle="bold"
                    android:textColor="#666"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/nama_perusahaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jenis_kendaraan"
                    android:layout_toRightOf="@id/gambar_kendaraan"
                    android:layout_marginTop="5dp"
                    android:text="Jaya Abadi Rent"
                    android:textColor="#000"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/text_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nama_perusahaan"
                    android:layout_toRightOf="@id/gambar_kendaraan"
                    android:layout_marginTop="5dp"
                    android:text="Harga sewa mulai"
                    android:textStyle="bold"
                    android:textColor="#666"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/harga_kenndaraan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_harga"
                    android:layout_toRightOf="@id/gambar_kendaraan"
                    android:layout_marginTop="5dp"
                    android:text="Rp. 250.000"
                    android:textStyle="bold"
                    android:textColor="#f1773a"
                    android:textSize="12sp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>