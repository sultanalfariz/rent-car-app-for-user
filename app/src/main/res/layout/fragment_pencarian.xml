<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context=".Fragment.PencarianFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/toolbar_area"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/ThemeColor">

        <TextView
            android:id="@+id/title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pencarian"
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="17sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/search_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_below="@+id/toolbar_area"
        android:orientation="horizontal"
        android:background="@color/ThemeColor">

        <EditText
            android:id="@+id/search_car"
            android:background="@drawable/bg_input_data"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:padding="8dp"
            android:textSize="12sp"
            android:hint="Cari mobil"/>

    </LinearLayout>

</RelativeLayout>